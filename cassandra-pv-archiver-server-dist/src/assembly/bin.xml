<?xml version="1.0" encoding="UTF-8"?>
<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>bin</id>
  <formats>
    <format>dir</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/assembly/extra-files</directory>
      <includes>
        <include>bin/cassandra-pv-archiver-server</include>
      </includes>
      <outputDirectory />
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
      <filtered>true</filtered>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>src/assembly/extra-files</directory>
      <includes>
        <include>bin/cassandra-pv-archiver-server.bat</include>
      </includes>
      <outputDirectory />
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
      <filtered>true</filtered>
      <lineEnding>dos</lineEnding>
    </fileSet>
    <fileSet>
      <directory>src/assembly/extra-files</directory>
      <includes>
        <include>**/*</include>
      </includes>
      <outputDirectory />
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/maven-shared-archive-resources/META-INF</directory>
      <includes>
        <include>LICENSE.txt</include>
        <include>NOTICE.txt</include>
      </includes>
      <outputDirectory>doc</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/manual-htmlsingle</directory>
      <excludes>
        <exclude>META-INF/**/*</exclude>
      </excludes>
      <includes>
        <include>**/*</include>
      </includes>
      <outputDirectory>doc/manual</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <outputFileNameMapping>${artifact.groupId}.${artifact.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
  </dependencySets>
</assembly>
